generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?
  image         String?
  accounts      Account[]
  sessions      Session[]
  settings      UserSettings?
  bots          GridBot[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?
  user               User @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}

model UserSettings {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  encryptedApiKey String?  @db.Text
  encryptedSecret String?  @db.Text
  tipLevel        Int      @default(1)
  refreshRate     Int      @default(60)
  theme           String   @default("green")
  demoMode        Boolean  @default(true)
  // Profile fields
  displayName     String?
  bio             String?  @db.Text
  socialTwitter   String?
  socialYoutube   String?
  socialTelegram  String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model GridBot {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  // Bot identity
  pair        String   // e.g. "BTCUSDT"
  displayPair String   // e.g. "BTC/USDT"
  status      String   @default("active") // active, paused, stopped
  // Grid configuration
  upperLimit  Float
  lowerLimit  Float
  gridCount   Int
  gridType    String   @default("arithmetic") // arithmetic, geometric
  investment  Float
  // Bot start time (manually entered)
  startedAt   DateTime
  // Notes
  notes       String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model RiskTip {
  id        String   @id @default(cuid())
  level     Int
  tipNumber Int
  title     String
  content   String   @db.Text
  createdAt DateTime @default(now())
  @@unique([level, tipNumber])
}
